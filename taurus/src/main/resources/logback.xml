<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<property resource="prop/logging.properties" />

	<jmxConfigurator />

	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<pattern>%date [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="file"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logging_dir}/${logging_file}.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logging_dir}/${logging_file}.%d{yyyy-MM-dd}.gz</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%date [%thread] %-5level %logger - %msg%n</pattern>
		</encoder>
	</appender>


	<logger name="com.yanzi" level="${logging.level:-INFO}" additivity="false">
		<if condition='property("system.env").equalsIgnoreCase("production")'>
			<then>
				<appender-ref ref="file" />
			</then>
			<else>
				<appender-ref ref="stdout" />
			</else>
		</if>
	</logger>

	<root level="INFO">
		<if condition='property("system.env").equalsIgnoreCase("production")'>
			<then>
				<appender-ref ref="file" />
			</then>
			<else>
				<appender-ref ref="stdout" />
			</else>
		</if>
	</root>

</configuration>
